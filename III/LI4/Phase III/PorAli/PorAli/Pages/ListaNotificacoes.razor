@page "/ListaNotificacoes"
@using PorAli.Data
@inject Utilizador user


<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PorAli</title>
    <link rel="stylesheet" href="./css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .img {
            text-align: center;
            display: block;
        }

        body {
            text-align: center;
        }

        .logo {
            text-align: center;
            width: 30%;
            margin-top: 100px;
        }

        .viagem {
            font-family: "Comic Sans MS", "Comic Sans";
            background-color: #cac7c7;
            border: 4px solid rgb(0, 0, 0);
            padding: 15px 115px;
            text-align: center;
            text-decoration: none;
            font-size: 25px;
        }

        .consulta {
            font-family: "Comic Sans MS", "Comic Sans";
            background-color: #cac7c7;
            border: 4px solid rgb(0, 0, 0);
            padding: 15px 88px;
            text-align: center;
            text-decoration: none;
            font-size: 25px;
            margin-top: 25px;
        }

        .ajuda {
            font-family: "Comic Sans MS", "Comic Sans";
            background-color: #cac7c7;
            border: 4px solid rgb(0, 0, 0);
            padding: 15px 167px;
            text-align: center;
            text-decoration: none;
            font-size: 25px;
            margin-top: 10px;
        }

        .configuracoes {
            font-family: "Comic Sans MS", "Comic Sans";
            background-color: #cac7c7;
            border: 4px solid rgb(0, 0, 0);
            padding: 15px 120px;
            text-align: center;
            text-decoration: none;
            font-size: 25px;
            margin-top: 10px;
        }

        a {
            color: black;
        }

        .font {
            font-family: "Comic Sans MS", "Comic Sans";
        }
    </style>
</head>

<body>

    @if (userNotifications.Count == 0)
    {

        <p>Não tem notificações</p>

    }
    else
    {
        <table class="w3-table-all w3-hoverable">
            <thead>
                <tr class="w3-pale-green">
                    <th>Notificaçoes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var n in userNotifications)
                {
                    <tr>
                        <td>@n.conteudo</td>
                    </tr>
                }
            </tbody>
        </table>

    }


</body>
</html>


@code {

    List<Notificacao> userNotifications;

    protected override async Task OnInitializedAsync()
    {
        userNotifications = user.listaNotificacoes;
    }
}


